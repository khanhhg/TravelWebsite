@model Travels.Models.EF.MenuPage
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
            <div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Create MenuPage</h4>                           
                @using (Html.BeginForm("create", "menupage", FormMethod.Post, new { @class = "forms-sample" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <!-- your steps content here -->                 
                        <div class="form-group">
                            <label for="Title">Page name</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Page name" })
                            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                        </div>
                      
                        <div class="form-group">
                            <label for="Link">Link</label>
                            @Html.TextBoxFor(x => x.Link, new { @class = "form-control", @placeholder = "Link"  })
                            @Html.ValidationMessageFor(x => x.Link, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Description">Description</label>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Description"  })
                        </div>
                        <div class="form-group">
                            <label for="Position">Position</label>
                            @Html.TextBoxFor(x => x.Position, new { @class = "form-control", @Value = "1" })
                        </div>


                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                    <a href="/admin/menupage" class="btn btn-light">Back</a>                                     
                }
              
                </div>
              </div>
            </div>     
          </div>
     


@section  scripts{
    <script src="~/js/jImagePreview.js"></script>
}