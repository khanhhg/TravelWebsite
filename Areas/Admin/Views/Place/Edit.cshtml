@model Travels.Models.EF.Place
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Place</h4>
                @using (Html.BeginForm("edit", "place", FormMethod.Post, new { @class = "forms-sample", @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x=>x.PlaceId)
                    <!-- your steps content here -->
                    <div class="form-group">
                        <label>Place name</label>
                        @Html.TextBoxFor(x => x.PlaceName, new { @class = "form-control", @placeholder = "Place name" })
                        @Html.ValidationMessageFor(x => x.PlaceName, null, new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        <label>Description</label>
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Description"  })
                    </div>
                    <div class="form-group">

                        <label>File upload</label>
                        <input type="file" name="fileImage" class="file-upload-default" id="ChooseImg">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                            </span>
                        </div>
                        <img id="PrevImg" src="@Travels.Common.Parameter.PlacePathImage/@Model.Image" style="width:200px;height:150px; border:1px solid red; border-radius:10px;padding:10px;margin-top:10px" />
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                    <a href="/admin/place" class="btn btn-light">Back</a>
                }

            </div>
        </div>
    </div>
</div>


@section  scripts{
    <script src="/AdminTemplate/js/file-upload.js"></script>
    <script src="~/js/jImagePreview.js"></script>
}


